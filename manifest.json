{
  "manifest_version": 3,
  "name": "AI Context Highlighter",
  "version": "0.2.5",
  "description": "Instant on-page explanations and summaries for highlighted text.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://en.wikipedia.org/*",
    "https://api.dictionaryapi.dev/*",
    "https://ai-context-highlighter.<your-subdomain>.workers.dev/*"
  ],
  "action": { "default_title": "Enable on this tab" },
  "background": { "service_worker": "background.js" },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
}
